{
    "compilerOptions": {
      "target": "es2017",
      "module": "esnext",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "jsx": "react",
      "noLib": false,
      "suppressImplicitAnyIndexErrors": true,
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*","index.d.ts"],
    "exclude": ["node_modules"]
  }